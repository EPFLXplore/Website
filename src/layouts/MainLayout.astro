---
import Menu from "../components/Menu.tsx";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import BackgroundNoise from "../components/BackgroundNoise.astro";
/**
 * @prop {string} [title] - Optional page title. Defaults to 'EPFL Xplore - Cutting-Edge Student Space Robotics'.
 * @prop {string} [theme] - Optional theme. Defaults to 'dark'.
 */
const {
  title = "EPFL Xplore - Cutting-Edge Student Space Robotics",
  theme = "dark",
} = Astro.props;
---

<!doctype html>
<html lang="en" class={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="px-10 py-4">
    <BackgroundNoise />
    <Menu client:load />
    <div class="px-15">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--background);
  }
</style>
