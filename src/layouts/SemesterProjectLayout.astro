---
const { title, major, pole, contact, applyLink, pdf_name } = Astro.props;

const baseUrl = import.meta.env.BASE_URL;
---

<article class="max-w-5xl mx-auto px-6 py-20 text-white">
  <h1 class="text-4xl font-bold mb-6">{title}</h1>

  <div class="text-lg mb-8 space-y-1">
    <p><strong class="text-blue-400">Related Major:</strong> {major}</p>
    <p><strong class="text-blue-400">Pole:</strong> {pole}</p>
    <p><strong class="text-blue-400">Contact:</strong> {contact}</p>
    <p>
      <a
        href={`${baseUrl}/pdfs/${pdf_name}.pdf`}
        download
        class="inline-block mt-2 px-4 py-2 bg-blue-500 hover:bg-blue-400 text-white rounded-lg font-semibold transition"
      >
        ðŸ“„ Download Project PDF
      </a>
    </p>
    <p>
      <a 
        href={applyLink} 
        target="_blank" 
        rel="noopener" 
        class="inline-block mt-2 px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-lg font-semibold transition"
      >
        Apply Here
      </a>
    </p>
  </div>

  <div class="prose prose-invert max-w-none text-gray-200 prose-headings:mt-10 prose-headings:text-white prose-ul:ml-6 prose-ul:list-disc prose-strong:text-white">
    <slot />
  </div>
</article>
