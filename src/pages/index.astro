---
import Layout from "../layouts/MainLayout.astro";
import NewsLink from "../components/NewsLink";

const base = import.meta.env.BASE_URL;
---

<Layout>
  <main class="flex flex-col items-center justify-center min-h-[60vh] py-24">
    <div
      class="items-start justify-start flex flex-col gap-2 overflow-hidden w-full max-w-lg flex-none pb-8 p-1"
    >
      <NewsLink
        type="recruitment"
        href={`${base}/join-us`}
        title="We are recruiting the next generation of Xplorers"
        icon="https://marketplace.canva.com/JQ6tE/MAFdXHJQ6tE/1/tl/canva-magnifying-glass-3d-icon.-MAFdXHJQ6tE.png"
      />
      <NewsLink
        type="recruitment"
        href={`${base}/semester-projects`}
        title="Check out our latest semester projects"
        icon="https://cdn3d.iconscout.com/3d/premium/thumb/project-management-3d-icon-download-in-png-blend-fbx-gltf-file-formats--teamwork-work-planning-business-pack-icons-9291049.png?f=webp"
      />
    </div>
    <h1 class="text-5xl md:text-7xl font-bold text-center mb-8">
      Welcome to EPFL Xplore
    </h1>
    <p class="text-xl md:text-2xl text-center mb-10 max-w-2xl">
      Discover our projects, read our blog, or get in touch. We are building the
      future, together.
    </p>
    <a
      href={`${base}/join-us`}
      class="px-8 py-2 bg-secondary text-white rounded-lg text-lg font-semibold shadow-lg hover:bg-secondary/80 transition"
      >Join us</a
    >
  </main>
</Layout>
